[Unit]
Description=harmony_node_stats daemon
After=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=1
User=serviceserv
WorkingDirectory=/home/serviceserv/harmony_node_stats
ExecStart=python3 /home/serviceserv/harmony_node_stats/main.py
SyslogIdentifier=harmony_node_stats
StartLimitInterval=0
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target